html, body
  margin 0
  padding 0
  background #ddd
  position relative

h1, h2, h3, h4, h5, h6, p, a, a:link, a:visited, a:hover, a:active
  font-family serif
  color #444
  margin 0
  text-align center

div.screen
  position absolute
  top 0
  left 0
  width 100%
  height 100%

  overflow hidden

div.kbd-scroll
  position absolute
  top 0
  left 0
  width 100%
  height 100%

  overflow auto

div.overscroll
  position absolute
  top 0
  left 0
  width 100%
  height 200%

div.content
  position absolute
  left 0
  bottom 0

  input
    width 100%
    border 0
    font-size 48px
